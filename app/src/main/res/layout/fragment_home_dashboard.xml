<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".HomeDashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"> <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Asthma\nPEFR Tracker"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/input_field_background"
                android:padding="8dp"
                android:src="@drawable/ic_person"
                app:tint="@color/primaryColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewHeader"
                app:layout_constraintBottom_toBottomOf="@id/textViewHeader"
                android:contentDescription="Profile"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/textViewHeader"
                app:layout_constraintTop_toBottomOf="@id/textViewHeader" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/cardLightBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/imageProfile"
                app:layout_constraintStart_toStartOf="@id/textViewHeader"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lineChart"
                        app:singleSelection="true"
                        app:checkedButton="@+id/buttonWeekly">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeekly"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly"
                            android:textColor="@color/white"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonMonthly"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:textColor="@color/white"/>

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTodayZone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/cardLightBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/imageProfile"
                app:layout_constraintStart_toStartOf="@id/textViewHeader"
                app:layout_constraintTop_toBottomOf="@id/cardGraph">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/labelTodayZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Zone"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textPEFRValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="450"
                        android:textColor="@color/white"
                        android:textSize="60sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelTodayZone" />

                    <TextView
                        android:id="@+id/textZoneGuidance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue the inhaler - Controller"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textPEFRValue" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSymptoms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/cardLightBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/imageProfile"
                app:layout_constraintStart_toStartOf="@id/textViewHeader"
                app:layout_constraintTop_toBottomOf="@id/cardTodayZone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/labelSymptoms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asthma Symptoms"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textSymptomPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="[Symptom Icons Placeholder]"
                        android:textColor="@color/accentColor"
                        android:textSize="14sp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/labelSymptoms"/>

                    <TextView
                        android:id="@+id/labelDust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dust"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textSymptomPlaceholder"
                        app:layout_constraintBottom_toBottomOf="@id/toggleDust"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/toggleDust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/labelDust"
                        app:thumbTint="@color/accentColor"
                        app:trackTint="@color/fieldBackgroundColor"/>

                    <TextView
                        android:id="@+id/labelSmoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoke"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toggleDust"
                        app:layout_constraintBottom_toBottomOf="@id/toggleSmoke"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/toggleSmoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/labelSmoke"
                        app:thumbTint="@color/accentColor"
                        app:trackTint="@color/fieldBackgroundColor"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRecordPEFR"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="Record PEFR"
                android:backgroundTint="@color/accentColor"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSymptoms" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSetReminder"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="Set Reminder"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="@id/buttonRecordPEFR"
                app:layout_constraintStart_toStartOf="@id/buttonRecordPEFR"
                app:layout_constraintTop_toBottomOf="@id/buttonRecordPEFR"
                app:strokeColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>